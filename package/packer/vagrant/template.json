{
  "builders": [
    {
      "boot_command": [
        "rancher",
        "<enter>",
        "sudo k3os install",
        "<enter>",
        "1",
        "<enter>",
        "2",
        "<enter>",
        "y",
        "<enter>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/config.yml",
        "<enter>",
        "y",
        "<enter>"
      ],
      "boot_wait": "40s",
      "disk_size": "20000",
      "format": "qcow2",
      "http_directory": ".",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "sudo poweroff",
      "shutdown_timeout": "10s",
      "ssh_keypair_name": "",
      "ssh_private_key_file": "packer_rsa",
      "ssh_timeout": "1000s",
      "ssh_username": "rancher",
      "type": "qemu"
    }
  ],
  "post-processors": [
    {
      "output": "k3os_{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "variables": {
